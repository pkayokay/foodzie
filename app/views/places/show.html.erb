<div class="center">
  <div class="left">

  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
    <% if @place.defaultpicture.present? %> 
    <br><br><%= image_tag @place.defaultpicture %>
    <% end %>
  <p><%= @place.description %></p>

  <br>
  <% if @place.latitude.present? && @place.longitude.present? %>

    <script>

      function initMap() {
        var myLatLng = {lat: -25.363, lng: 131.044};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 4,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCYqSZUGiDKEBD_q0xKJV-CDeC2Sy1uTVY&
    callback=initMap">
    </script>
    <div id="map"></div>

    <% end %>
    
    <% if current_user && current_user == @place.user %>
      <%= link_to 'Edit', edit_place_path(@place), class: 'btn' %>
      <%= link_to 'Delete', place_path(@place), method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: 'btn' %>
    <% end %>
  </div>
</div>